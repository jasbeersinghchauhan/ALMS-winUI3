<Window
    x:Class="Pages.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ALMS | User Dashboard">

    <Grid Background="#F4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#1F2E45" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="ðŸ“š ALMS - User Dashboard"
                           FontSize="24" FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="20">
                    <Button Content="ðŸ“„ My Borrowed Books" Foreground="White" Background="Transparent" FontSize="14" BorderBrush="White" BorderThickness="0"/>
                    <Button Content="ðŸ‘¤ My Profile" Foreground="White" Background="Transparent" FontSize="14" BorderBrush="White" BorderThickness="0"/>
                    <Button Content="ðŸšª Logout" Foreground="White" Background="Transparent" FontSize="14" BorderBrush="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="40,30" HorizontalAlignment="Center" Width="1000" Spacing="35">

                <TextBlock Text="Available Books"
                           FontSize="26" FontWeight="Bold"
                           Foreground="#1B1B1B"
                           HorizontalAlignment="Center"/>

                <!-- Search Area -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <ComboBox x:Name="SearchTypeComboBox" Width="80" SelectedIndex="0">
                        <ComboBoxItem Content="ISBN"/>
                        <ComboBoxItem Content="Title"/>
                    </ComboBox>

                    <TextBox x:Name="SearchBox"
                             Width="300"
                             PlaceholderText="Enter ISBN or Title"
                             Padding="6"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>

                    <Button Content="ðŸ” Search"
                            Background="#0078D4" Foreground="White"
                            Padding="6,4" Width="90"
                            BorderThickness="0"/>

                    <Button Content="âŒ Clear"
                            Background="#D13438" Foreground="White"
                            Padding="6,4" Width="90"
                            BorderThickness="0"/>
                </StackPanel>

                <!-- Book List -->
                <ListView x:Name="BookListView"
                          BorderBrush="#E1E1E1"
                          BorderThickness="1"
                          Background="White"
                          CornerRadius="6"
                          IsItemClickEnabled="True">
                    <ListView.Header>
                        <Grid Background="#E9EEF3" Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Style>
                            </Grid.Resources>
                            <TextBlock Text="ISBN" Grid.Column="0"/>
                            <TextBlock Text="Title" Grid.Column="1"/>
                            <TextBlock Text="Author" Grid.Column="2"/>
                            <TextBlock Text="Available" Grid.Column="3"/>
                        </Grid>
                    </ListView.Header>

                    <!-- ITEMS BOUND FROM DATABASE -->
                    <!-- Make sure to bind ItemsSource in code-behind -->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding ISBN}" Grid.Column="0" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Title}" Grid.Column="1" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Author}" Grid.Column="2" TextAlignment="Center"/>
                                <TextBlock Text="{Binding Available}" Grid.Column="3" TextAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Background="#1F2E45" Grid.Row="2" Padding="10">
            <TextBlock Text="Â© 2025 Advanced Library Management System | User Portal"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
